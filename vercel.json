{
  "version": 2,
  "installCommand": "npm install && cd backend && npm install && cd ../frontend && npm install",
  "buildCommand": "cd backend && npm run build && cd ../frontend && npm run build",
  "builds": [
    {
      "src": "backend/dist/src/main.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/dist/src/main.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/$1"
    }
  ],
  "functions": {
    "backend/dist/src/main.js": {
      "maxDuration": 30,
      "memory": 1024
    }
  }
}
